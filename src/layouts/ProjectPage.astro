---
import type { CollectionEntry } from "astro:content";
import MainLayout from "./MainLayout.astro";
import ResponsiveImage from "../components/ResponsiveImage.astro";

type Props = CollectionEntry<"projects">["data"];

const { properties } = Astro.props as any;

// Handle both Notion and MDX data structures
const isNotionProject = !!properties.pTitle;
const isMdxProject = !isNotionProject;

// Normalize data for consistent access
const projectData = {
  title: isNotionProject ? properties.pTitle : properties.title,
  client: isNotionProject ? properties.pOrganiser : properties.client,
  clientIndustry: isMdxProject ? properties.clientIndustry : undefined,
  projectDuration: isMdxProject ? properties.projectDuration : undefined,
  teamSize: isMdxProject ? properties.teamSize : undefined,
  technologies: isMdxProject ? properties.technologies : undefined,
  challenges: isMdxProject ? properties.challenges : undefined,
  solutions: isMdxProject ? properties.solutions : undefined,
  results: isMdxProject ? properties.results : undefined,
  beforeMetrics: isMdxProject ? properties.beforeMetrics : undefined,
  afterMetrics: isMdxProject ? properties.afterMetrics : undefined,
  roiPercentage: isMdxProject ? properties.roiPercentage : undefined,
  clientTestimonial: isMdxProject ? properties.clientTestimonial : undefined,
  clientName: isMdxProject ? properties.clientName : undefined,
  clientPosition: isMdxProject ? properties.clientPosition : undefined,
  beforeImage: isMdxProject ? properties.beforeImage : undefined,
  afterImage: isMdxProject ? properties.afterImage : undefined,
  additionalImages: isMdxProject ? properties.additionalImages : undefined,
  imageUrl: isNotionProject ? properties.pImageURL : properties.imageUrl,
  country: isNotionProject ? properties.pCountry : properties.country,
  locale: isNotionProject ? properties.pLocale : properties.locale,
  category: isNotionProject ? properties.pCategory : properties.category,
  cost: isNotionProject ? properties.pCost : properties.cost,
  url: isNotionProject ? properties.pURL : properties.url,
  verify: isNotionProject ? properties.pVerify : properties.verify,
};

const title = projectData.title + " - Projects";
const description = projectData.challenges || properties.pReview || '';
const image = projectData.imageUrl || "/https://res.cloudinary.com/dxyjku3eh/image/upload/v1754820661/Tanpa_judul_Presentasi__20250810_170926_0000_vdiibn.png";

// Default image if not provided
const DEFAULT_IMAGE = 'https://res.cloudinary.com/dxyjku3eh/image/upload/v1754820661/Tanpa_judul_Presentasi__20250810_170926_0000_vdiibn.png';
const featuredImage = projectData.imageUrl || DEFAULT_IMAGE;

const fallbackImage = DEFAULT_IMAGE;
const oneSec: string[] = [projectData.imageUrl, ...(projectData.additionalImages || [])].filter((i: string) => !!i);
const images: string[] = oneSec.length > 0 ? oneSec : [fallbackImage];
---

<MainLayout title={title} description={description} image={image}>
  <div class="bg-white dark:bg-gray-900">
    <div class="mx-auto max-w-screen-xl grid grid-cols-1 lg:grid-cols-[2fr_1fr] gap-8 px-0 lg:px-6">
      <!-- Main column -->
      <main class="w-full">
        <!-- Breadcrumbs -->
        <section class="pt-6 px-4">
          <nav class="flex" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
              <li class="inline-flex items-center">
                <a
                  href="/"
                  class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600 dark:text-gray-400 dark:hover:text-white"
                >
                  <svg
                    class="w-3 h-3 me-2.5"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="currentColor"
                    viewBox="0 0 20 20"
                  >
                    <path
                      d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"
                    ></path>
                  </svg>
                  Home
                </a>
              </li>
              <li>
                <div class="flex items-center">
                  <svg
                    class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 6 10"
                  >
                    <path
                      stroke="currentColor"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="m1 9 4-4-4-4"></path>
                  </svg>
                  <a
                    href="/projects"
                    class="ms-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ms-2 dark:text-gray-400 dark:hover:text-white"
                  >
                    Projects
                  </a>
                </div>
              </li>
              <li aria-current="page">
                <div class="flex items-center">
                  <svg
                    class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 6 10"
                  >
                    <path
                      stroke="currentColor"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="m1 9 4-4-4-4"></path>
                  </svg>
                  <span class="ms-1 text-sm font-medium text-gray-500 md:ms-2 dark:text-gray-400">
                    {projectData.title}
                  </span>
                </div>
              </li>
            </ol>
          </nav>
        </section>

        <!-- Project Header -->
        <section class="pt-4 px-4">
          <h1 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">
            {projectData.title}
          </h1>
          
          <!-- Project metadata -->
          {isMdxProject && (
            <div class="flex flex-wrap items-center gap-6 mb-6">
              {projectData.client && (
                <div class="flex items-center gap-2">
                  <span class="text-sm text-gray-600 dark:text-gray-400">Client:</span>
                  <span class="font-medium text-gray-900 dark:text-white">{projectData.client}</span>
                </div>
              )}
              {projectData.clientIndustry && (
                <div class="flex items-center gap-2">
                  <span class="text-sm text-gray-600 dark:text-gray-400">Industry:</span>
                  <span class="font-medium text-gray-900 dark:text-white">{projectData.clientIndustry}</span>
                </div>
              )}
              {projectData.projectDuration && (
                <div class="flex items-center gap-2">
                  <span class="text-sm text-gray-600 dark:text-gray-400">Duration:</span>
                  <span class="font-medium text-gray-900 dark:text-white">{projectData.projectDuration}</span>
                </div>
              )}
              {projectData.teamSize && (
                <div class="flex items-center gap-2">
                  <span class="text-sm text-gray-600 dark:text-gray-400">Team:</span>
                  <span class="font-medium text-gray-900 dark:text-white">{projectData.teamSize}</span>
                </div>
              )}
            </div>
          )}

          <!-- Categories and location -->
          <div class="flex flex-wrap items-center gap-4 mb-6">
            {projectData.category && (
              <div class="flex items-center gap-2">
                <span class="text-sm text-gray-600 dark:text-gray-400">Categories:</span>
                <div class="flex flex-wrap gap-2">
                  {Array.isArray(projectData.category)
                    ? projectData.category.map((c) => (
                        <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full dark:bg-blue-900 dark:text-blue-300">{c}</span>
                      ))
                    : <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full dark:bg-blue-900 dark:text-blue-300">{projectData.category}</span>
                  }
                </div>
              </div>
            )}
            {projectData.locale && (
              <div class="flex items-center gap-2">
                <span class="text-sm text-gray-600 dark:text-gray-400">Location:</span>
                <div class="flex flex-wrap gap-2">
                  {Array.isArray(projectData.locale)
                    ? projectData.locale.map((l) => (
                        <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded-full dark:bg-green-900 dark:text-green-300">{l}</span>
                      ))
                    : <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded-full dark:bg-green-900 dark:text-green-300">{projectData.locale}</span>
                  }
                </div>
              </div>
            )}
          </div>

          <!-- Technologies Used (MDX only) -->
          {isMdxProject && projectData.technologies && (
            <div class="mb-6">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">Technologies Used</h3>
              <div class="flex flex-wrap gap-2">
                {projectData.technologies.map((tech) => (
                  <span class="bg-purple-100 text-purple-800 text-sm font-medium px-3 py-1 rounded-lg dark:bg-purple-900 dark:text-purple-300">{tech}</span>
                ))}
              </div>
            </div>
          )}

          <!-- ROI Highlight (MDX only) -->
          {isMdxProject && projectData.roiPercentage && (
            <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg dark:bg-green-900 dark:border-green-700">
              <div class="flex items-center">
                <svg class="w-6 h-6 text-green-600 dark:text-green-400 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
                <div>
                  <h3 class="text-lg font-semibold text-green-800 dark:text-green-200">ROI Achievement</h3>
                  <p class="text-green-700 dark:text-green-300">
                    <span class="text-2xl font-bold">{projectData.roiPercentage}</span> return on investment achieved
                  </p>
                </div>
              </div>
            </div>
          )}
        </section>

        <!-- Featured Image -->
        <section class="py-6 px-4">
          <ResponsiveImage
            class="w-full drop-shadow-xl rounded-lg"
            src={images[0]}
            alt={projectData.title}
            fetchpriority="high"
            loading="eager"
            preset="hero"
          />
        </section>

        <!-- Before/After Metrics (MDX only) -->
        {isMdxProject && projectData.beforeMetrics && projectData.afterMetrics && (
          <section class="py-6 px-4">
            <h2 class="mb-6 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
              Before vs After Results
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <!-- Before -->
              <div class="p-6 bg-red-50 border border-red-200 rounded-lg dark:bg-red-900 dark:border-red-700">
                <h3 class="text-lg font-semibold text-red-800 dark:text-red-200 mb-4 flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                  Before Implementation
                </h3>
                <div class="space-y-3">
                  {projectData.beforeMetrics.traffic && (
                    <div>
                      <span class="text-sm font-medium text-red-700 dark:text-red-300">Traffic:</span>
                      <span class="ml-2 text-red-600 dark:text-red-400">{projectData.beforeMetrics.traffic}</span>
                    </div>
                  )}
                  {projectData.beforeMetrics.conversions && (
                    <div>
                      <span class="text-sm font-medium text-red-700 dark:text-red-300">Conversions:</span>
                      <span class="ml-2 text-red-600 dark:text-red-400">{projectData.beforeMetrics.conversions}</span>
                    </div>
                  )}
                  {projectData.beforeMetrics.revenue && (
                    <div>
                      <span class="text-sm font-medium text-red-700 dark:text-red-300">Revenue:</span>
                      <span class="ml-2 text-red-600 dark:text-red-400">{projectData.beforeMetrics.revenue}</span>
                    </div>
                  )}
                  {projectData.beforeMetrics.performance && (
                    <div>
                      <span class="text-sm font-medium text-red-700 dark:text-red-300">Performance:</span>
                      <span class="ml-2 text-red-600 dark:text-red-400">{projectData.beforeMetrics.performance}</span>
                    </div>
                  )}
                </div>
              </div>
              
              <!-- After -->
              <div class="p-6 bg-green-50 border border-green-200 rounded-lg dark:bg-green-900 dark:border-green-700">
                <h3 class="text-lg font-semibold text-green-800 dark:text-green-200 mb-4 flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  After Implementation
                </h3>
                <div class="space-y-3">
                  {projectData.afterMetrics.traffic && (
                    <div>
                      <span class="text-sm font-medium text-green-700 dark:text-green-300">Traffic:</span>
                      <span class="ml-2 text-green-600 dark:text-green-400">{projectData.afterMetrics.traffic}</span>
                    </div>
                  )}
                  {projectData.afterMetrics.conversions && (
                    <div>
                      <span class="text-sm font-medium text-green-700 dark:text-green-300">Conversions:</span>
                      <span class="ml-2 text-green-600 dark:text-green-400">{projectData.afterMetrics.conversions}</span>
                    </div>
                  )}
                  {projectData.afterMetrics.revenue && (
                    <div>
                      <span class="text-sm font-medium text-green-700 dark:text-green-300">Revenue:</span>
                      <span class="ml-2 text-green-600 dark:text-green-400">{projectData.afterMetrics.revenue}</span>
                    </div>
                  )}
                  {projectData.afterMetrics.performance && (
                    <div>
                      <span class="text-sm font-medium text-green-700 dark:text-green-300">Performance:</span>
                      <span class="ml-2 text-green-600 dark:text-green-400">{projectData.afterMetrics.performance}</span>
                    </div>
                  )}
                </div>
              </div>
            </div>
          </section>
        )}

        <!-- Client Testimonial (MDX only) -->
        {isMdxProject && projectData.clientTestimonial && (
          <section class="py-6 px-4">
            <div class="p-6 bg-blue-50 border-l-4 border-blue-400 dark:bg-blue-900 dark:border-blue-500">
              <blockquote class="text-lg italic text-blue-800 dark:text-blue-200 mb-4">
                "{projectData.clientTestimonial}"
              </blockquote>
              {projectData.clientName && (
                <cite class="text-blue-600 dark:text-blue-300 font-semibold">
                  — {projectData.clientName}
                  {projectData.clientPosition && (
                    <span class="text-blue-500 dark:text-blue-400 font-normal">, {projectData.clientPosition}</span>
                  )}
                </cite>
              )}
            </div>
          </section>
        )}

        <!-- Content -->
        <section class="py-6 px-4">
          <h2 class="mb-4 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
            {isMdxProject ? "Case Study Details" : "About This Project"}
          </h2>
          <article class="format format-sm sm:format-base lg:format-lg format-teal dark:format-invert">
            <slot />
          </article>
        </section>
      </main>

      <!-- Aside column (desktop only) -->
      <aside class="hidden lg:block pt-16">
        <div class="sticky top-24 space-y-6">
          <!-- Project Info Card -->
          <div class="bg-white border border-gray-200 rounded-lg p-6 dark:bg-gray-800 dark:border-gray-700">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Project Information</h3>
            <div class="space-y-3">
              {projectData.client && (
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-600 dark:text-gray-400">Client:</span>
                  <span class="text-sm font-medium text-gray-900 dark:text-white">{projectData.client}</span>
                </div>
              )}
              {projectData.verify && (
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-600 dark:text-gray-400">Status:</span>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300">
                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    {projectData.verify}
                  </span>
                </div>
              )}
              {projectData.cost && (
                <div class="flex items-center justify-between">
                  <span class="text-sm text-gray-600 dark:text-gray-400">Budget:</span>
                  <span class="text-sm font-medium text-gray-900 dark:text-white">
                    {Array.isArray(projectData.cost) ? `Rp ${projectData.cost[0]} - ${projectData.cost[1]}` : projectData.cost}
                  </span>
                </div>
              )}
            </div>
          </div>

          <!-- Contact Card -->
          <div class="bg-white border border-gray-200 rounded-lg p-6 dark:bg-gray-800 dark:border-gray-700">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Interested in Similar Project?</h3>
            <div class="space-y-3">
              <a 
                href="https://wa.me/6285799520350" 
                target="_blank" 
                rel="noopener noreferrer" 
                class="w-full inline-flex items-center justify-center gap-2 rounded-lg px-4 py-3 text-sm font-medium text-white bg-emerald-600 hover:bg-emerald-700"
              >
                <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.965-.273-.099-.471-.149-.67.15-.198.297-.767.964-.94 1.162-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.521.149-.173.198-.297.298-.496.099-.198.05-.372-.025-.521-.074-.149-.669-1.611-.916-2.206-.242-.582-.487-.502-.669-.51l-.57-.01c-.198 0-.52.074-.792.372-.272.297-1.04 1.017-1.04 2.479 0 1.461 1.065 2.874 1.213 3.072.149.198 2.095 3.2 5.076 4.487.71.306 1.263.489 1.694.626.712.227 1.36.195 1.872.118.571-.085 1.758-.718 2.006-1.41.248-.694.248-1.289.173-1.41-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.999-3.648-.235-.374a9.86 9.86 0 01-1.51-5.234c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.12 1.03 6.988 2.899a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.886 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L0 24l6.33-1.654a11.88 11.88 0 005.713 1.456h.005c6.554 0 11.89-5.335 11.893-11.893a11.82 11.82 0 00-3.47-8.421"/>
                </svg>
                <span class="font-semibold">Konsultasi Gratis</span>
              </a>
              {projectData.url && (
                <a 
                  href={projectData.url} 
                  target="_blank" 
                  rel="noopener noreferrer" 
                  class="w-full inline-flex items-center justify-center rounded-lg px-4 py-3 text-sm font-medium text-gray-800 bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 dark:text-gray-300"
                >
                  Visit Project
                </a>
              )}
            </div>
            <p class="mt-4 text-xs text-gray-600 dark:text-gray-400">
              Diskusikan proyek serupa dengan tim expert kami dan dapatkan solusi terbaik untuk bisnis Anda.
            </p>
          </div>
        </div>
      </aside>
    </div>
  </div>
</MainLayout>
