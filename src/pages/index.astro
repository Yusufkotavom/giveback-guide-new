---
import MainLayout from "../layouts/MainLayout.astro";
import HomeHero from "../components/Homepage/HomeHero.astro";
import ServicesHighlight from "../components/Homepage/ServicesHighlight.astro";
import LatestProjects from "../components/Homepage/LatestProjects.astro";
import LatestProducts from "../components/Homepage/LatestProducts.astro";
import LatestServices from "../components/Homepage/LatestServices.astro";
import LatestPosts from "../components/Homepage/LatestPosts.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<MainLayout
  title={`${SITE_TITLE} - IT Service & Publications Terpercaya`}
  description={SITE_DESCRIPTION}
>
  <HomeHero />
  <ServicesHighlight />
  <main>
    <LatestServices limit={6} />
    <LatestProjects limit={6} />
    <LatestProducts limit={6} />
    <section class="bg-gray-50 dark:bg-gray-900">
      <div
        class="gap-8 items-center py-8 px-4 mx-auto max-w-screen-xl xl:gap-16 md:grid md:grid-cols-2 sm:py-16 lg:px-6"
      >
        <img
          class="w-full rounded-xl"
          src="https://res.cloudinary.com/dnxl7wsnx/image/upload/v1747306362/group-people_gsydcz.jpg"
          alt="Tim profesional kotacom.id sedang bekerja mengembangkan solusi IT"
        />
        <div class="mt-4 md:mt-0">
          <h2
            class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
          >
            Bergabunglah dengan klien yang puas menggunakan layanan kotacom.id
          </h2>
          <p
            class="mb-6 font-light text-gray-500 md:text-lg dark:text-gray-400"
          >
            Dapatkan konsultasi gratis untuk kebutuhan IT bisnis Anda. Tim ahli kami 
            siap membantu mengembangkan solusi digital yang tepat untuk meningkatkan 
            produktivitas dan efisiensi perusahaan Anda.
          </p>
          <a
            href="https://wa.me/085799520350"
            class="inline-flex items-center text-white bg-green-600 hover:bg-green-700 focus:ring-4 focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:focus:ring-green-900"
          >
            Konsultasi Gratis via WhatsApp
            <svg
              class="ml-2 -mr-1 w-5 h-5"
              fill="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                d="M7.978 4a2.553 2.553 0 0 0-1.926.877C4.233 6.7 3.699 8.751 4.153 10.814c.44 1.995 1.778 3.893 3.456 5.572 1.68 1.679 3.577 3.018 5.57 3.459 2.062.456 4.115-.073 5.94-1.885a2.556 2.556 0 0 0 .001-3.861l-1.21-1.21a2.689 2.689 0 0 0-3.802 0l-.617.618a.806.806 0 0 1-1.14 0l-1.854-1.855a.807.807 0 0 1 0-1.14l.618-.62a2.692 2.692 0 0 0 0-3.803l-1.21-1.211A2.555 2.555 0 0 0 7.978 4Z"
              ></path></svg
            >
          </a>
        </div>
      </div>
    </section>
    <LatestPosts limit={6} />
  </main>
</MainLayout>
