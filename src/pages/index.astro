---
import MainLayout from "../layouts/MainLayout.astro";
import HomeHero from "../components/Homepage/HomeHero.astro";
import LatestProjects from "../components/Homepage/LatestProjects.astro";
import LatestStays from "../components/Homepage/LatestStays.astro";
import LatestProducts from "../components/Homepage/LatestProducts.astro";
import LatestPosts from "../components/Homepage/LatestPosts.astro";
import { SITE_TITLE } from "../consts";
---

<MainLayout
  title={`${SITE_TITLE} - Discover amazing ways to give back to the places you visit`}
  description="Giveback is a growing collection of animal sanctuaries, beach cleans, cultural exchanges, social impact projects, tours, tree planting, wellbeing experiences and more."
>
  <HomeHero />
  <main>
    <LatestProjects limit={6} />
    <LatestStays limit={6} />
    <LatestProducts limit={6} />
    <section class="bg-gray-50 dark:bg-gray-900">
      <div
        class="gap-8 items-center py-8 px-4 mx-auto max-w-screen-xl xl:gap-16 md:grid md:grid-cols-2 sm:py-16 lg:px-6"
      >
        <img
          class="w-full rounded-xl"
          src="https://res.cloudinary.com/dnxl7wsnx/image/upload/v1747306362/group-people_gsydcz.jpg"
          alt="A group people having fun and smiling"
        />
        <div class="mt-4 md:mt-0">
          <h2
            class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
          >
            Show your support for our platform by joining our community
          </h2>
          <p
            class="mb-6 font-light text-gray-500 md:text-lg dark:text-gray-400"
          >
            You're invited to join our growing community of concious travellers.
            You'll get the latest updates about our platform, the newest
            projects, and priority access to new features.
          </p>
          <a
            href="/join"
            class="inline-flex items-center text-white bg-black hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:focus:ring-primary-900"
          >
            Join our community
            <svg
              class="ml-2 -mr-1 w-5 h-5"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                fill-rule="evenodd"
                d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                clip-rule="evenodd"></path></svg
            >
          </a>
        </div>
      </div>
    </section>
    <LatestPosts limit={6} />
  </main>
</MainLayout>
