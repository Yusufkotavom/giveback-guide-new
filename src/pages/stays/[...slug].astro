---
import StayPage from '../../layouts/StayPage.astro';
import { render } from 'astro:content';
import { getAllStays, type UnifiedStay } from '../../utils/contentHelpers';

export async function getStaticPaths() {
	const stays = await getAllStays();
	return stays.map((stay) => ({
		params: { slug: stay.slug },
		props: stay,
	}));
}
type Props = UnifiedStay;

const stay = Astro.props;
const { Content } = await render(stay);
---

<StayPage {...stay.data}>
	<Content />
</StayPage>
