---
import { getCollection } from 'astro:content';

const entries = await getCollection('services');

const categoryCounts = entries.reduce((acc: Record<string, number>, e) => {
  const cats = Array.isArray(e.data.properties.svCategory)
    ? e.data.properties.svCategory
    : [e.data.properties.svCategory].filter(Boolean);
  cats.forEach((c) => { if (c) acc[c] = (acc[c] || 0) + 1; });
  return acc;
}, {} as Record<string, number>);

const categories = Object.keys(categoryCounts).sort();
---
<div class="flex flex-wrap gap-4">
  <div class="w-full md:w-1/2 p-2">
    <button
      id="svcCatButton"
      data-dropdown-toggle="svcCatDropdown"
      class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
      type="button"
    >Kategori
      <svg class="w-2.5 h-2.5 ms-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4"/>
      </svg>
    </button>

    <div id="svcCatDropdown" class="z-50 hidden bg-white divide-y divide-gray-100 rounded-lg shadow-sm w-56 dark:bg-gray-700">
      <ul class="h-60 py-2 overflow-y-auto text-gray-700 dark:text-gray-200" aria-labelledby="svcCatButton">
        <li>
          <a class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" href="/services">Semua</a>
        </li>
        {categories.map((c) => (
          <li>
            <a class="block px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" href={`/services?category=${encodeURIComponent(c)}`}>
              {c} ({categoryCounts[c]})
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</div>