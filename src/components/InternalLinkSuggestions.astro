  <!-- Pillar Links (High Priority) -->
  {relevantPillars.length > 0 && (
    <div class="pillar-links mb-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-3 flex items-center">
        <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        ðŸŽ¯ Layanan Utama
      </h3>
      <div class="grid gap-2">
        {relevantPillars.map(pillar => (
          <a href={pillar.slug} 
             class="block p-3 bg-blue-50 hover:bg-blue-100 rounded-md transition-colors duration-200 border border-blue-200">
            <div class="font-semibold text-blue-900">{pillar.title}</div>
            <div class="text-sm text-blue-700 mt-1">{pillar.cta}</div>
          </a>
        ))}
