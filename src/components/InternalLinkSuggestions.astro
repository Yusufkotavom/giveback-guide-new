---
interface Props {
  currentSlug: string;
  currentTags?: string[];
  contentType: 'post' | 'service' | 'pillar';
  currentTitle?: string;
}

const { currentSlug, currentTags = [], contentType, currentTitle } = Astro.props;

// Define pillar pages with their main keywords and URLs
const pillarPages = [
  {
    title: "Jasa Pembuatan Website Profesional",
    slug: "/layanan/pembuatan-website",
    keywords: ["website", "web development", "toko online"],
    category: "website-development",
    cta: "Konsultasi Website Gratis"
  },
  {
    title: "Template Website Siap Pakai",
    slug: "/layanan/template-website", 
    keywords: ["template", "website siap pakai", "online 24 jam"],
    category: "website-development",
    cta: "Pilih Template Premium"
  },
  {
    title: "Layanan IT Support 24/7",
    slug: "/services/it-support",
    keywords: ["it support", "maintenance", "troubleshooting"],
    category: "it-support", 
    cta: "Hubungi IT Support"
  },
  {
    title: "Sistem POS untuk UMKM",
    slug: "/layanan/sistem-pos",
    keywords: ["pos", "point of sale", "umkm", "kasir"],
    category: "umkm-digital",
    cta: "Demo Sistem POS"
  }
];

// Define related content mapping
const contentClusters = {
  "website-development": [
    { title: "Web Design Responsive Surabaya", slug: "/blog/web-design-responsive-surabaya" },
    { title: "Jasa Pembuatan Website Terbaik", slug: "/blog/jasa-pembuatan-website-surabaya-terbaik" },
    { title: "Toko Online Surabaya", slug: "/blog/toko-online-surabaya" },
    { title: "Software Development Surabaya", slug: "/blog/software-development-surabaya" }
  ],
  "it-support": [
    { title: "IT Infrastructure Planning", slug: "/blog/it-infrastructure-planning-surabaya" },
    { title: "Server Maintenance Surabaya", slug: "/blog/server-maintenance-surabaya" },
    { title: "Backup Recovery Sistem", slug: "/blog/backup-recovery-sistem-surabaya" },
    { title: "Troubleshooting Komputer", slug: "/blog/troubleshooting-komputer-surabaya" }
  ],
  "umkm-digital": [
    { title: "Digital Transformation UMKM", slug: "/blog/digital-transformation-umkm-surabaya" },
    { title: "Digitalisasi UMKM Terbaik", slug: "/blog/digitalisasi-umkm-surabaya-terbaik" },
    { title: "Sistem POS UMKM Terbaik", slug: "/blog/sistem-pos-surabaya-terbaik-untuk-umkm" },
    { title: "Smart City Surabaya", slug: "/blog/smart-city-surabaya-teknologi" }
  ],
  "tech-ecosystem": [
    { title: "Startup Tech Surabaya", slug: "/blog/startup-tech-surabaya-sidoarjo" },
    { title: "Coworking Space Tech", slug: "/blog/coworking-space-tech-surabaya" },
    { title: "Konsultan IT Sidoarjo", slug: "/blog/konsultan-it-sidoarjo-terpercaya" }
  ]
};

// Function to determine content category based on current content
function determineCategory(slug: string, tags: string[], title: string = ""): string {
  const content = slug.toLowerCase() + " " + tags.join(" ").toLowerCase() + " " + title.toLowerCase();
  
  if (content.includes("website") || content.includes("web") || content.includes("template") || content.includes("toko online")) {
    return "website-development";
  } else if (content.includes("it support") || content.includes("server") || content.includes("infrastructure") || content.includes("maintenance")) {
    return "it-support";
  } else if (content.includes("umkm") || content.includes("pos") || content.includes("digital transformation") || content.includes("digitalisasi")) {
    return "umkm-digital";
  } else if (content.includes("startup") || content.includes("tech") || content.includes("coworking") || content.includes("smart city")) {
    return "tech-ecosystem";
  }
  
  return "website-development"; // default
}

// Get current content category
const currentCategory = determineCategory(currentSlug, currentTags, currentTitle || "");

// Get related content from same cluster
const relatedContent = contentClusters[currentCategory]?.filter(item => 
  !currentSlug.includes(item.slug.replace("/blog/", "").replace("/", ""))
).slice(0, 3) || [];

// Get cross-pillar suggestions (from other categories)
const otherCategories = Object.keys(contentClusters).filter(cat => cat !== currentCategory);
const crossPillarContent = otherCategories.flatMap(cat => 
  contentClusters[cat]?.slice(0, 1) || []
).slice(0, 2);

// Get relevant pillar pages
const relevantPillars = pillarPages.filter(pillar => 
  pillar.category === currentCategory || 
  pillar.keywords.some(keyword => 
    currentTags.some(tag => tag.toLowerCase().includes(keyword.toLowerCase())) ||
    (currentTitle || "").toLowerCase().includes(keyword.toLowerCase())
  )
).slice(0, 2);

// Get service CTAs
const serviceCTAs = pillarPages.filter(pillar => pillar.slug.includes("/services/") || pillar.slug.includes("/layanan/")).slice(0, 3);
---

