---
import ResponsiveImage from './ResponsiveImage.astro';
import { getAvailableMarketplaces, getRandomPrimaryMarketplace, getSecondaryMarketplaces, getMarketplaceIcon, formatPrice } from '../utils/marketplaceUtils';

interface Props {
  product: {
    data: {
      properties: {
        pSlug: string;
        pImageURL1: string;
        pVerify?: string;
        pCountry: string | string[];
        pLocale: string | string[];
        pTitle: string;
        pName: string;
        pType: string;
        pPrice?: string | number;
        pTokopediaURL?: string;
        pShopeeURL?: string;
        pBlibliURL?: string;
        pBukalapakURL?: string;
        pLazadaURL?: string;
      };
    };
  };
}

const { product } = Astro.props;
const properties = product.data.properties as any;
const formattedPrice = formatPrice(properties.pPrice);
const availableMarketplaces = getAvailableMarketplaces(properties);
const primaryMarketplace = getRandomPrimaryMarketplace(availableMarketplaces);
const secondaryMarketplaces = getSecondaryMarketplaces(availableMarketplaces, primaryMarketplace);
---

<article class="rounded-lg">
    <div class="relative">
        <a href={`/products/${product.data.properties.pSlug}/`}>
          <ResponsiveImage
            class="w-full rounded-lg h-64 object-cover"
            src={product.data.properties.pImageURL1}
            alt=""
            preset="card"
            fallbackWidth={600}
          />
          {product.data.properties.pVerify && (
            <div class="absolute top-2 left-2 bg-gbgyellow bg-opacity-80 rounded-md px-2 py-1 flex items-center gap-1">
              <svg
                class="h-5 w-5 text-black"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  fill-rule="evenodd"
                  d="M12 2c-.791 0-1.55.314-2.11.874l-.893.893a.985.985 0 0 1-.696.288H7.04A2.984 2.984 0 0 0 4.055 7.04v1.262a.986.986 0 0 1-.288.696l-.893.893a2.984 2.984 0 0 0 0 4.22l.893.893a.985.985 0 0 1 .288.696v1.262a2.984 2.984 0 0 0 2.984 2.984h1.262c.261 0 .512.104.696.288l.893.893a2.984 2.984 0 0 0 4.22 0l.893-.893a.985.985 0 0 1 .696-.288h1.262a2.984 2.984 0 0 0 2.984-2.984V15.7c0-.261.104-.512.288-.696l.893-.893a2.984 2.984 0 0 0 0-4.22l-.893-.893a.985.985 0 0 1-.288-.696V7.04a2.984 2.984 0 0 0-2.984-2.984h-1.262a.985.985 0 0 1-.696-.288l-.893-.893A2.984 2.984 0 0 0 12 2Zm3.683 7.73a1 1 0 1 0-1.414-1.413l-4.253 4.253-1.277-1.277a1 1 0 0 0-1.415 1.414l1.985 1.984a1 1 0 0 0 1.414 0l4.96-4.96Z"
                  clip-rule="evenodd"
                />
              </svg>
              <p class="text-xs font-medium text-black dark:text-white">
                {product.data.properties.pVerify}
              </p>
            </div>
          )}
        </a>
      </div>
  <p>
    {Array.isArray(product.data.properties.pCountry)
      ? product.data.properties.pCountry.map((country: string) => (
          <span
            class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium border border-solid border-gray-300 bg-gray-50 text-gray-800 dark:bg-gray-900 dark:text-gray-300 ml-2 mt-4 mb-2"
          >
            <a
              href={`/products/${country.toLowerCase().replace(/\s+/g, "-")}`}
            >
              {country}
            </a>
          </span>
        ))
      : product.data.properties.pCountry}
  </p>
  <h2 class="mb-1 text-2xl font-bold tracking-tight text-gray-900 dark:text-white px-4">
    <a href={`/products/${product.data.properties.pSlug}/`}>
      {product.data.properties.pTitle}
    </a>
  </h2>
  {formattedPrice && (
    <p class="px-4 mb-2 text-lg font-semibold text-green-600">{formattedPrice}</p>
  )}
  {availableMarketplaces.length > 0 && (
    <div class="flex items-center gap-2 px-4 mb-3">
      {primaryMarketplace && (
        <a
          href={primaryMarketplace.url}
          target="_blank"
          rel="noopener noreferrer"
          class={`inline-flex items-center gap-2 rounded-lg px-3 py-2 text-sm font-medium ${primaryMarketplace.bgColor} ${primaryMarketplace.hoverColor} ${primaryMarketplace.color}`}
        >
          <span set:html={getMarketplaceIcon(primaryMarketplace.icon)} />
          <span>{primaryMarketplace.ctaText}</span>
        </a>
      )}
      {secondaryMarketplaces.map((m) => (
        <a
          href={m.url}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex h-10 w-10 items-center justify-center rounded-full border border-gray-200 text-gray-700 hover:bg-gray-100 dark:border-gray-700 dark:text-gray-300 dark:hover:bg-gray-700"
          aria-label={m.name}
          title={m.name}
        >
          <span set:html={getMarketplaceIcon(m.icon)} />
        </a>
      ))}
    </div>
  )}
  <p class="mt-2 text-sm font-normal text-gray-400 dark:text-gray-400 px-4">
           <span class="text-gray-800">{product.data.properties.pName}</span> adalah <span class="text-gray-900">{product.data.properties.pType}</span> dari <span class="text-gray-900">{
            Array.isArray(product.data.properties.pLocale)
              ? product.data.properties.pLocale.map((locale, index) => (
                  <>
                      {locale}
                    {index < product.data.properties.pLocale.length - 1 ? ", " : ""}
                  </>
                ))
              : product.data.properties.pLocale
          }</span>
  </p>
</article>