            </div>
            
            <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
              {service.title}
            </h3>
            
            <p class="text-gray-600 text-sm mb-4 line-clamp-2">
              {service.description}
            </p>
            
            <ul class="space-y-1 mb-4">
              {service.features.map(feature => (
                <li class="flex items-center text-xs text-gray-500">
                  <svg class="w-3 h-3 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
