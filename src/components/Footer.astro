---
import { Image } from "astro:assets";
import Avatar from "../assets/giveback-guide-avatar.svg";
import { SITE_TITLE, COMPANY_NAME, COMPANY_WHATSAPP } from "../consts";
const today = new Date();
---

<section
  class="bg-[#F1E8FB] dark:bg-gray-900"
  aria-labelledby="newsletter-heading"
>
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
    <div class="mx-auto max-w-screen-md sm:text-center">
      <h2
        id="newsletter-heading"
        class="mb-4 text-3xl tracking-tight font-extrabold text-gray-900 sm:text-4xl dark:text-white"
      >
        Bergabung dengan kotacom.id
      </h2>
      <p
        class="mx-auto mb-8 max-w-2xl font-light text-gray-500 md:mb-12 sm:text-xl dark:text-gray-400"
      >
        Dapatkan update terbaru tentang layanan IT, tips teknologi, dan solusi digital 
        untuk mengembangkan bisnis Anda
      </p>
      <form
        action="https://submit-form.com/IlQ2jAQOf"
        method="POST"
        class="w-100%"
      >
        <div
          class="items-center mx-auto mb-3 space-y-4 max-w-screen-sm sm:flex sm:space-y-0"
        >
          <div class="relative w-full">
            <label
              for="email"
              class="hidden mb-2 text-sm font-medium text-gray-900 dark:text-gray-300"
              >Email address</label
            >
            <div
              class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none"
            >
              <svg
                class="w-5 h-5 text-gray-500 dark:text-gray-400"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                ></path>
                <path
                  d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                ></path>
              </svg>
            </div>
            <input
              class="block p-3 pl-10 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 sm:rounded-none sm:rounded-l-lg focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
              placeholder="Masukkan email Anda"
              type="email"
              id="email"
              name="email"
              required
            />
            <input
              type="checkbox"
              name="consent"
              style="display:none"
              tabindex="-1"
              autocomplete="off"
            />
            <input
              type="hidden"
              name="_redirect"
              value="https://kotacom.id/join/confirm"
            />
            <input type="hidden" name="_append" value="false" />
          </div>
          <div>
            <button
              type="submit"
              class="py-3 px-5 w-full text-sm font-medium text-center text-white rounded-lg border cursor-pointer bg-black border-primary-600 sm:rounded-none sm:rounded-r-lg hover:bg-gray-800 focus:ring-4 focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800"
            >
              Subscribe
            </button>
          </div>
        </div>
        <div
          class="mx-auto max-w-screen-sm text-sm text-left text-gray-500 newsletter-form-footer dark:text-gray-300"
        >
          Kami menghormati privasi Anda. 
          <a
            href="/privacy"
            class="font-medium text-primary-600 dark:text-primary-500 hover:underline"
            >Kebijakan Privasi</a
          >
        </div>
      </form>
    </div>
  </div>
</section>

<footer class="p-4 bg-gray-50 sm:p-6 dark:bg-gray-800" role="contentinfo">
  <div class="mx-auto max-w-screen-xl">
    <div class="md:flex md:justify-between">
      <div class="mb-6 md:mb-0">
        <a href="https://kotacom.id" class="flex items-center">
          <Image src={Avatar} class="w-22 h-22" alt="kotacom.id" />
          <div class="ml-3">
            <div class="text-xl font-bold text-gray-900 dark:text-white">kotacom.id</div>
            <div class="text-sm text-gray-500 dark:text-gray-400">IT Service & Publications</div>
            <div class="text-sm text-gray-500 dark:text-gray-400">Surabaya - Sidoarjo</div>
          </div>
        </a>
      </div>
      <div class="grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-3">
        <div>
          <h2
            class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
          >
            Layanan
          </h2>
          <ul class="text-gray-600 dark:text-gray-400">
            <li class="mb-4">
              <a href="/services" class="hover:underline">IT Service & Support</a>
            </li>
            <li class="mb-4">
              <a href="/services" class="hover:underline">Website Development</a>
            </li>
            <li class="mb-4">
              <a href="/services" class="hover:underline">Software Development</a>
            </li>
            <li>
              <a href="/services" class="hover:underline">Social Media Management</a>
            </li>
          </ul>
        </div>
        <div>
          <h2
            class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
          >
            Perusahaan
          </h2>
          <ul class="text-gray-600 dark:text-gray-400">
            <li class="mb-4">
              <a href="/about/" class="hover:underline">Tentang Kami</a>
            </li>
            <li class="mb-4">
              <a href="/projects/" class="hover:underline">Portfolio</a>
            </li>
            <li class="mb-4">
              <a href="/blog/" class="hover:underline">Artikel & Tips</a>
            </li>
            <li>
              <a href="/contact/" class="hover:underline">Kontak</a>
            </li>
          </ul>
        </div>
        <div>
          <h2
            class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white"
          >
            Kontak & Legal
          </h2>
          <ul class="text-gray-600 dark:text-gray-400">
            <li class="mb-4">
              <a href="https://wa.me/{COMPANY_WHATSAPP}" class="hover:underline">WhatsApp: {COMPANY_WHATSAPP}</a>
            </li>
            <li class="mb-4">
              <a href="/privacy" class="hover:underline">Kebijakan Privasi</a>
            </li>
            <li class="mb-4">
              <a href="/terms" class="hover:underline">Syarat & Ketentuan</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
    <div class="sm:flex sm:items-center sm:justify-between">
      <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400"
        >&copy; {today.getFullYear()} {COMPANY_NAME}. All Rights Reserved.
      </span>
      <div class="flex mt-4 space-x-6 sm:justify-center sm:mt-0">
        <a
          href="https://wa.me/{COMPANY_WHATSAPP}"
          class="text-gray-500 hover:text-gray-900 dark:hover:text-white"
          aria-label="WhatsApp"
        >
          <svg
            class="w-6 h-6"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
            ><path
              d="M7.978 4a2.553 2.553 0 0 0-1.926.877C4.233 6.7 3.699 8.751 4.153 10.814c.44 1.995 1.778 3.893 3.456 5.572 1.68 1.679 3.577 3.018 5.57 3.459 2.062.456 4.115-.073 5.94-1.885a2.556 2.556 0 0 0 .001-3.861l-1.21-1.21a2.689 2.689 0 0 0-3.802 0l-.617.618a.806.806 0 0 1-1.14 0l-1.854-1.855a.807.807 0 0 1 0-1.14l.618-.62a2.692 2.692 0 0 0 0-3.803l-1.21-1.211A2.555 2.555 0 0 0 7.978 4Z"
            ></path></svg
          >
        </a>
        <a
          href="mailto:info@kotacom.id"
          class="text-gray-500 hover:text-gray-900 dark:hover:text-white"
          aria-label="Email"
        >
          <svg
            class="w-6 h-6"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
            ><path
              d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
            ></path>
            <path
              d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
            ></path></svg
          >
        </a>
        <a
          href="https://linkedin.com/company/kotacom-id"
          class="text-gray-500 hover:text-gray-900 dark:hover:text-white"
          aria-label="LinkedIn"
        >
          <svg
            class="w-6 h-6"
            fill="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
            ><path
              fill-rule="evenodd"
              d="M19 0H5a5 5 0 0 0-5 5v14a5 5 0 0 0 5 5h14a5 5 0 0 0 5-5V5a5 5 0 0 0-5-5zM8 19H5V8h3v11zM6.5 6.732c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zM20 19h-3v-5.604c0-3.368-4-3.113-4 0V19h-3V8h3v1.765c1.396-2.586 7-2.777 7 2.476V19z"
              clip-rule="evenodd"></path></svg
          >
        </a>
      </div>
    </div>
  </div>
</footer>
